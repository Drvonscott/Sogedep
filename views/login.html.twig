{% extends 'layout.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if error %}
 <div class="alert alert-danger">
  <strong>Connection impossible</strong><br />
  {{ error }}
 </div>
{% endif %}

<div class="well">
 <form class="form-signin form-horizontal" role="form" action="{{ path('login_check') }}" method="post">
  <div class="form-group">
   <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
   	<label for="user">Username :</label>
    <input type="text" id="user" name="_username" value="{{ last_username }}" class="form-control" placeholder="Username" required autofocus />
   </div>
  </div>
  <div class="form-group">
   <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
   	<label for="pwd">Mot de passe :</label>
    <input type="password" id="pwd" name="_password" class="form-control" placeholder="Password" required />
   </div>
  </div>
  <div class="form-group">
   <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
    <center><button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-log-in"></span> Se connecter</button></center>
   </div>
  </div>
 </form>
</div>
{% endblock %}