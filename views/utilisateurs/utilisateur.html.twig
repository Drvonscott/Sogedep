{% extends "layout.html.twig" %}

{% block title %}Utilisateur{% endblock %}

{% block body %}

<h2>{{ utilisateur.prenom }} {{ utilisateur.nom }}</h2>
 <table class="table table-hover">
  <tbody>
   <tr><td>Adresse 1</td><td>{{ utilisateur.adresse1 }}</td></tr>
   <tr><td>Adresse 2</td><td>{{ utilisateur.adresse2 }}</td></tr>
   <tr><td>Adresse 3</td><td>{{ utilisateur.adresse3 }}</td></tr>
   <tr><td>Code postal</td><td>{{ utilisateur.codepostal }}</td></tr>
   <tr><td>Ville</td><td>{{ utilisateur.ville }}</td></tr>
   <tr><td>Email</td><td>{{ utilisateur.email }}</td></tr>
   <tr><td>Initiales</td><td>{{ utilisateur.initiales }}</td></tr>
   <tr><td>Pseudo</td><td>{{ utilisateur.pseudo }}</td></tr>
   <tr><td>Password</td><td>{{ utilisateur.password }}</td></tr>
   <tr><td>Salt</td><td>{{ utilisateur.salt }}</td></tr>
   <tr><td>Role</td><td>{{ utilisateur.role }}</td></tr>
  </tbody>
 </table> 
 
{% endblock %}