{% extends "layout.html.twig" %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}

  <h2>Utilisateurs</h2>
  <table class="table table-hover">
   <thead>
    <tr>
     <th>Utilisateur</th>
     <th>Email</th>
     <th>Telephone</th>
     <th>Role</th>
    </tr>
   </thead>
   <tbody>
   {% for utilisateur in utilisateurs %}
    <tr>
     <td><a href="{{ path('utilisateur', { 'id': utilisateur.id }) }}">{{ utilisateur.prenom }} {{ utilisateur.nom }}</a></td>
     <td>{{ utilisateur.email }}</td> 
     <td>{{ utilisateur.telephone }}</td>
     <td>{{ utilisateur.role }}</td>
    </tr>
   {% endfor %}
   </tbody>
  </table>

{% endblock %}